{
	"passPerPreset": true,
	"presets": [
		"react",
		[
			"es2015"
		]
	],
	"env": {
		"development": {
			// "presets": ["react-hmre"]
		},
		"production": {
			"plugins": [
				"transform-react-constant-elements",
				"transform-react-inline-elements",
				"transform-react-remove-prop-types"
			]
		},
		"targets": {
			"browsers": [
				"last 2 versions",
				"> 5% in BE"
			],
			"uglify": true
		},
		"test": {
			"plugins": [
				"istanbul"
			]
		}
	},
	"plugins": [
		[
			"typecheck",
			{
				"disable": {
					"production": true,
					"development": true
				}
			}
		],
		"transform-object-rest-spread"
	]
}